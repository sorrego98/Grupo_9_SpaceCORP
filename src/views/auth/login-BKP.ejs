<%- include ('../partials/commons/head')%>
    <link rel="stylesheet" href="/css/loginstyles.css">
    <title>Login</title>
</head>
<%- include ('../partials/commons/header')%>
    <main>
        <section id="login-container" class="container">
            <form method="POST" action="/auth/login">
                <h2>¡Hola! Inicia sesión con tu email y contraseña</h2>
                <br>
                <label></label>
                <input type="email" id="input-email" class="input"  name="email" required placeholder="Ingresa tu email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
                <% if(typeof(errors) != 'undefined'){%>
                    <span class="text-danger">
                    <%= errors[0].msg %>
                    </span>
                <%}%>
                <br>
                <br>
                <label></label>
                <input type="password" id="input-pass" class="input" name="password" required placeholder="Ingresa tu contraseña">
                <% if(typeof(errors) != 'undefined' ){%>
                    <span class="text-danger">
                    <%= errors[0].msg %>
                    </span>
                <%}%>
                <br>
                <br>
                <div class="form-group ">
                    <input type="checkbox" name="recordarme"><label class="checkbox-inline">Recordarme</label>
                </div>
                <br>
                <button type="submit" name="login" class="boton-login">Iniciar Sesión</button>
            </form>
            <form action="/auth/register" method="get">
                <br>
                <div>
                    <button type="submit" name="noregister" class="boton-crear">Crear cuenta</button>
                </div>
            </form>
        </section>
        <div class="social-media-log">
            <p>Iniciar sesión con:</p>
            <br>
            <div class="icons">
                <p><a href="#" class="nolink nolink-ig"><i class="fa-brands fa-instagram"></i> Instagram</a></p>
                <p><a href="#" class="nolink nolink-fb"><i class="fa-brands fa-facebook"></i> Facebook</a></p>
                <p><a href="#" class="nolink nolink-ms"><i class="fa-brands fa-microsoft"></i> Microsoft</a></p>
                <p><a href="#" class="nolink nolink-gg"><i class="fa-brands fa-google"></i> Google</a></p>
            </div>
        </section>
    </main>
    <%- include ('../partials/commons/footer')%>