<%- include ('../partials/commons/head')%>
<title>Nuestros Servicios</title>
<link rel="stylesheet" href="/css/productsstyles.css">
<link rel="stylesheet" href="/css/products/listProducts.css">
</head>
<%- include ('../partials/commons/header')%>
<div id="productModal" class="modal">
    <div class="modal-content">
        <div class="box-title border-top title-modal">
            <h2 id="productTitle"></h2>
            <i class="fa-solid rectangle-xmark close"></i>
        </div>
        <div class="product-container border-bottom">
            <img id="productImage"src="" alt="">
            <span id="productDescription">x</span>
            <span id="productPrice"></span> <span id="productPriceType"></span>
            <div class="product-actions">
                <button class="add-product"><i class="fa-solid fa-cart-plus"></i></button>
                <button class="fav-product"><i class="fa-solid fa-heart"></i></button>
            </div>
        </div>
    </div>
</div>
<main>
    <div class="container-max-box">
        <h1 class="box-title border-top">Servicios</h1>
        <div class="main-container">
            <% for (let i = 0; i < products.length; i++) { %>
                <% if (products[i].subcategories.length > 0) { %>
                    <div class="accordion">
                        <h2><%= products[i].name %></h2>
                        <div class="panel">
                            <% for (let j = 0; j < products[i].subcategories.length; j++) { %>
                                <% if (products[i].subcategories[j].products.length > 0) { %>
                                    <div class="sub-accordion">
                                        <h3><%= products[i].subcategories[j].name %></h3>
                                        <div class="sub-panel">
                                            <% for (let k = 0; k < products[i].subcategories[j].products.length; k++) { %>
                                                <p class="products"><%= products[i].subcategories[j].products[k].name %></p>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            <% } %>
            <script src="/scripts/products/listProducts.js"></script>
        </div>
    </div>
</main>
<%- include ('../partials/commons/footer')%>
