<%- include ('../../../partials/commons/head')%>
    <link rel="stylesheet" href="/css/modproducts.css">
    <title>Modificar Producto</title>
    </head>
    <%- include ('../../../partials/commons/header')%>
        <main>
            <div class="split-view">
                <section class="form-container">
                    <div class="header-form">
                        <h2 class="form-title"><i class="fa-solid fa-wand-magic-sparkles form-title fa-lg"></i>
                            Modificación de Producto </h2>
                    </div>
                    <form class="form" method="POST" enctype="multipart/form-data"
                        action="/admin/products/products/modify-product/<%= allProducts.id%>?_method=PUT">
                        <div class="subitem">
                            <h4 class="center-title">Nombre del producto</h4>
                            <input type="text" name="productname" id="productname" class="form-input form-dimention"
                                required placeholder="Ingrese el nombre del producto" value="<%= allProducts.name%>">
                        </div>

                        <div class="subitem">
                            <h4 class="center-title">Descripción</h4>
                            <input type="text" name="productdescription" id="productdescription"
                                class="form-input form-dimention" required
                                placeholder="Ingrese una descripción (MAX: 300 caracteres)"
                                value="<%= allProducts.description%>">
                        </div>

                        <div class="subitem">
                            <h4 class="center-title">Imagen</h4>
                            <div class="custom-file">
                                <figure class="form-group">
                                    <img width="50%" src="/db-images/products/products/<%=allProducts.image%>"
                                        alt="services-others" <%=allProducts.image%>>
                                </figure>
                                <input type="hidden" name="oldImage" value="<%=allProducts.image%>">
                                <input type="file" name="image" id="image">
                            </div>
                        </div>

                        <div class="subitem">
                            <h4 class="center-title">Categoría Actual: <%= allProducts.categories.name%>
                            </h4>
                        </div>

                        <div class="subitem">
                            <label for="categoryID">Seleccione una categoría </label>
                            <p>
                                <select name="category_id" id="category_id" required>
                                    <option value="<%= allProducts.categories.id%>" disabled selected>
                                        <%= allProducts.categories.name%>
                                    </option>
                                    <% allCategories.forEach(category=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </p>
                        </div>

                        <div class="subitem">
                            <h4 class="center-title">Subcategoría Actual: <%= allProducts.subcategories.name%>
                            </h4>
                        </div>

                        <div class="subitem">
                            <label for="subcategoryID">Seleccione una subcategoría </label>
                            <p>
                                <select name="subcategory_id" id="subcategory_id" required>
                                    <option value="<%= allProducts.subcategories.id%>" disabled selected>
                                        <%= allProducts.subcategories.name%>
                                    </option>
                                    <% allSubcategories.forEach(subcategory=> { %>
                                        <option value="<%= subcategory.id %>">
                                            <%= subcategory.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </p>
                        </div>

                        <div class="subitem">
                            <h4 class="center-title">Unidad Precio Actual: <%= allProducts.productprices.name%>
                            </h4>
                        </div>

                        <div class="subitem">
                            <label for="priceID">Unidad Precio </label>
                            <p>
                                <select name="price_id" id="price_id" required>
                                    <option value="<%= allProducts.productprices.id%>" disabled selected>
                                        <%= allProducts.productprices.name%>
                                    </option>
                                    <% allPrices.forEach(price=> { %>
                                        <option value="<%= price.id %>">
                                            <%= price.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </p>
                        </div>

                        <div class="subitem">
                            <h3 class="center-title">Precio</h3>
                            <input type="text" name="price" id="price" class="form-input form-dimention center-title"
                                required placeholder="0,00$" value="<%= allProducts.price%>">
                        </div>

                        <div class="subitem">
                            <h4 class="center-title"> <% if (allProducts.status == 1) { %>
                                    Estado Actual: Activo
                                    <% } else { %>
                                        Estado Actual: inactivo
                                        <% } %>
                            </h4>
                        </div>

                        <div class="subitem">
                            <h3 class="center-title">Status</h3>
                            <input type="number" name="statusProduct" id="statusProduct"
                                class="form-input form-dimention center-title" required placeholder="0">
                        </div>

                        <div class="subitem">
                            <button type="submit" name="add-item" class="add-item-button form-button">Guardar
                                Cambios</button>
                        </div>
                    </form>
            </div>
        </main>
        <%- include ('../../../partials/commons/footer')%>