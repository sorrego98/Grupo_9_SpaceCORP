<%- include ('../../../partials/commons/head')%>
    <link rel="stylesheet" href="/css/modproducts.css">
    <title>Registro</title>
</head>
<%- include ('../../../partials/commons/header')%>
    <main>
        <div class="split-view">            
            <section class="form-container">
                <div class ="header-form">                    
                    <h2 class="form-title"><i class="fa-solid fa-wand-magic-sparkles form-title fa-lg"></i> Modificar Producto </h2>
                </div>
                <form class="form" method="POST" action="/admin/products/modify-product/<%= product.id%>?_method=PUT">
                    <div class="subitem">
                        <h4 class="center-title">Nombre del Producto</h4>
                        <input type="text" name="name" id="input-user" class="form-input form-dimention" required placeholder="Ingrese un nombre para su producto" value="<%= product.name%>">
                    </div>
                    
                    <div class="subitem">
                        <h4 class="center-title">Descripción</h4>
                        <input type="text" name="description" id="input-pass" class="form-input form-dimention" required placeholder="Ingrese una descripción (MAX: 300 caracteres)" value="<%= product.description%>">                        
                    </div>
                    
                    <div class="subitem">
                        <h4 class="center-title">Imagen</h4>
                        <div class="custom-file">
                            <figure class="form-group">
                              <img class="w-100" src="/db-images/products/<%=product.image%>"
                               alt="services-others" <%=product.image%>">
                            </figure>
                            <input type="hidden" name="oldImage" value="<%=product.image%>">
                            <input type="file" name="image">
                        </div>                        
                    </div>

                    <div class="subitem">
                        <h4 class="center-title">Categoría de costo</h4>
                        <div class="sub-rows">
                            <label>
                                
                                <input type="radio" class="sub-element" name="profile" value="fixed" required <%= product.priceType == 'fixed'? "checked" : null %>>Precio Fijo</input>                                
                            </label>
                            <label>
                                <input type="radio" class="sub-element" name="profile" value="quoted" required <%= product.priceType == 'quoted'? "checked" : null %>>Cotización</input>
                                
                            </label>
                        </div>
                    </div>
                    <div class="subitem">
                        <h4 class="center-title">Precio</h4>
                        <input type="text" name="price" id="input-email" class="form-input form-dimention center-title" required placeholder="0,00$" value="<%=product.price%>">

                    </div>

                    <div class="subitem">
                        <button type="submit" name="add-item" class="add-item-button form-button">Guardar Cambios</button>
                    </div>
                </form>
            </section>
            <section class="previews-container">
                <div class="preview-item">            
                    <div class="preview-desktop">
                        
                    </div>
                    <div class="preview-mobile">
                        
                    </div>
                </div>
            </section>   
        </div>     
    </main>
    <%- include ('../../../partials/commons/footer')%>
