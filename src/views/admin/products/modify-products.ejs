<%- include ('../../partials/commons/head')%>
    <link rel="stylesheet" href="/css/modproducts.css">
    <title>Registro</title>
</head>
<%- include ('../../partials/commons/header')%>
    <main>
        <div class="split-view">            
            <section class="form-container">
                <div class ="header-form">                    
                    <h2 class="form-title"><i class="fa-solid fa-wand-magic-sparkles form-title fa-lg"></i> Modificar Producto </h2>
                </div>
                <form class="form" enctype="multipart/form-data" method="post" action="/products/modify-product">
                    <div class="subitem">
                        <h4 class="center-title">Nombre del Producto</h4>
                        <input type="text" id="input-user" class="form-input form-dimention" required placeholder="Ingrese un nombre para su producto">
                    </div>
                    
                    <div class="subitem">
                        <h4 class="center-title">Descripción</h4>
                        <input type="text" id="input-pass" class="form-input form-dimention" required placeholder="Ingrese una descripción (MAX: 300 caracteres)">                        
                    </div>
                    
                    <div class="subitem">
                        <h4 class="center-title">Imagen</h4>
                        <input type="file" id="input-pass-confirm" class="form-input image-info" required placeholder="Ingrese su contraseña">                        
                    </div>

                    <div class="subitem">
                        <h4 class="center-title">Categoría de costo</h4>
                        <div class="sub-rows">
                            <label>
                                <input type="radio" class="sub-element" name="profile" value="fixed" required>Precio Fijo</input>
                            </label>
                            <label>
                                <input type="radio" class="sub-element" name="profile" value="quoted" required>Cotización</input>
                            </label>
                        </div>
                    </div>
                    <div class="subitem">
                        <h4 class="center-title">Precio</h4>
                        <input type="text" id="input-email" class="form-input form-dimention center-title" required placeholder="0,00$">

                    </div>

                    <div class="subitem">
                        <button type="submit" name="add-item" class="add-item-button form-button">Guardar Cambios</button>
                    </div>
                </form>
            </section>
            <section class="previews-container">
                <div class="preview-item">            
                    <div class="preview-desktop">
                        
                    </div>
                    <div class="preview-mobile">
                        
                    </div>
                </div>
            </section>   
        </div>     
    </main>
    <%- include ('../../partials/commons/footer')%>
