<%- include ('../../../partials/commons/head')%>
    <link rel="stylesheet" href="/css/modproducts.css">
    <title>Modificar Producción</title>
</head>
<%- include ('../../../partials/commons/header')%>
    <main>
        <div class="split-view">            
            <section class="form-container">
                <div class ="header-form">                    
                    <h2 class="form-title"><i class="fa-solid fa-wand-magic-sparkles form-title fa-lg"></i> Modificación de Producción </h2>
                </div>
                <form class="form" method="POST" action="/admin/home/latestProductions/modify-production/<%= production.id%>?_method=PUT">

                    <div class="subitem">
                        <h4 class="center-title">Nombre de la Producción</h4>
                        <input type="text" name="songname" id="songname" class="form-input form-dimention" required placeholder="Ingrese el nombre de la Producción" value="<%= production.songTitle%>">
                    </div>

                    <div class="subitem">
                        <h4 class="center-title">Nombre del Artista</h4>
                        <input type="text" name="artistname" id="artistname" class="form-input form-dimention" required placeholder="Ingrese el cargo del integrante" value="<%= production.artistName%>">
                    </div>

                    <div class="subitem">
                        <h4 class="center-title">Link YouTube de la Producción</h4>
                        <input type="text" name="youtubeurl" id="youtubeurl" class="form-input form-dimention" required placeholder="Ingrese un link" value="<%= production.youtubeUrl%>">
                    </div>

                    <div class="subitem">
                        <button type="submit" name="add-item" class="add-item-button form-button">Guardar Cambios</button>
                    </div>
                </form>
        </div>     
    </main>
    <%- include ('../../../partials/commons/footer')%>
