<%- include ('../../../partials/commons/head')%>
    <link rel="stylesheet" href="/css/modproducts.css">
    <title>Modificar Galería</title>
</head>
<%- include ('../../../partials/commons/header')%>
    <main>
        <div class="split-view">            
            <section class="form-container">
                <div class ="header-form">                    
                    <h2 class="form-title"><i class="fa-solid fa-wand-magic-sparkles form-title fa-lg"></i> Modificación de Galería </h2>
                </div>
                <form class="form" method="POST" enctype="multipart/form-data" action="/admin/home/galery/modify-image/<%= galery.id%>?_method=PUT">

                    <div class="subitem">
                        <h4 class="center-title">Nombre</h4>
                        <input type="text" name="imagename" id="imagename" class="form-input form-dimention" required placeholder="Ingrese el nombre de la imagen" value="<%= galery.name%>">
                    </div>
                    
                    <div class="subitem">
                        <h4 class="center-title">Imagen</h4>
                        <div class="custom-file">
                            <figure class="form-group">
                              <img width="40%" src="/db-images/home/galery/<%=galery.image%>" alt="services-others" <%=galery.image%>>
                            </figure>
                            <input type="hidden" name="oldImage" value="<%=galery.image%>">
                            <input type="file" name="image" id="image">
                        </div>                        
                    </div>

                    <div class="subitem">
                        <button type="submit" name="add-item" class="add-item-button form-button">Guardar Cambios</button>
                    </div>
                </form>
        </div>     
    </main>
    <%- include ('../../../partials/commons/footer')%>
