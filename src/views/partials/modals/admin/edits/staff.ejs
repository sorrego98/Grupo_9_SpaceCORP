<div class="modal-content">
    <div class="box-title border-top title-modal">
        <h2 id="title-table">texto titulo</h2>
        <i class="fa-regular fa-rectangle-xmark close"></i>
    </div>    
    <form class="form-container border-bottom" id="edit-form" enctype="multipart/form-data">
        <div class="subitem">
            <strong class="center-title">Avatar actual</strong>
            <img id="memberImage" src="#" alt="" class="pass-element">
            <strong class="center-title">Cambiar avatar</strong>
            <input type="file" name="memberNewImage" id="memberNewImage" class="pass-element">
        </div>
        <div class="subitem">
            <strong class="center-title">Nombre</strong>
            <input type="text" name="memberName" id="memberName" class="form-input-text pass-element" required placeholder="Ingrese el nombre">
        </div>
        
        <div class="subitem">
            <strong class="center-title">Cargo</strong>
            <input type="text" name="memberPosition" id="memberPosition" class="form-input-text pass-element" required placeholder="Ingrese el cargo">
        </div>
        
        <div class="subitem">
            <strong class="center-title">Instagram</strong>
            <input type="text" name="memberIG" id="memberIG" class="form-input-text pass-element" required placeholder="Ingresa el username de IG">
        </div>
        
        <div class="subitem">
            <strong class="center-title">URL Instagram</strong>
            <input type="text" name="memberIGURL" id="memberIGURL" class="form-input-text pass-element" required placeholder="Ingrese URL del Instagram">
        </div>
        
        <div class="subitem">
            <button type="submit" name="add-item" class="submit-btn update">Actualizar</button>
        </div>        
    </form>
</div>