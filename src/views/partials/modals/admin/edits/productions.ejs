<div class="modal-content">
    <div class="box-title border-top title-modal">
        <h2 id="title-table">texto titulo</h2>
        <i class="fa-regular fa-rectangle-xmark close"></i>
    </div>    
    <form class="form-container border-bottom" id="edit-form" enctype="multipart/form-data" method="PUT" action="/mostrarModal/edit/prods">
        <div class="subitem">
            <strong class="center-title">Título</strong>
            <input type="text" name="productionTitle" id="productionTitle" class="form-input-text pass-element" required placeholder="Ingrese el título de la canción">
        </div>
        <div class="subitem">
            <strong class="center-title">Artista</strong>
            <input type="text" name="productionArtist" id="productionArtist" class="form-input-text pass-element" required placeholder="Ingrese el nombre del artista o banda">
        </div>
        <div class="subitem">
            <strong class="center-title">Link a video</strong>
            <input type="text" name="productionYTUrl" id="productionYTUrl" class="form-input-text pass-element" required placeholder="Ingrese el link de YT para el video">
        </div>
        <div class="subitem">
            <button type="submit" name="add-item update" class="submit-btn update">Actualizar</button>
        </div>        
    </form>
</div>