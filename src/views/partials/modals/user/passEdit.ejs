<div class="modal-content">
    <div class="box-title border-top title-modal">
        <h2 id="title-table">Editar Contraseña</h2>
        <i class="fa-regular fa-rectangle-xmark close"></i>
    </div>
    <form class="form-container border-bottom" id="create-form" enctype="multipart/form-data" method="POST" action="/admin/create/staff">
        <div class="subitem">
            <strong>Contraseña</strong>
            <div class="viewPass">
                <input type="password" name="userPass" id="userPass" class="form-input-text" placeholder="ingrese su nueva contraseña">
                <div id="pass-clicked" class="icon-click">
                    <i class="fa-solid fa-eye-slash pass-icon"></i>
                </div>
            </div>
        </div>
        <div class="subitem">
            <strong>Repita su contraseña</strong>
            <div class="viewPassConfirm">
                <input type="password" name="userPassConfirm" id="userPassConfirm" class="form-input-text" placeholder="repita la contraseña">
                <div id="confirm-clicked" class="icon-click">
                    <i class="fa-solid fa-eye-slash confirm-icon"></i>
                </div>
            </div>
        </div>
        <div class="subitem">
            <button type="submit" name="edit-item" class="submit-btn">Cambiar</button>
        </div>
        
    </form>
</div>