<div class="modal-content">
    <div class="box-title border-top title-modal">
        <h2 id="title-table">Editar Datos de Usuario</h2>
        <i class="fa-regular fa-rectangle-xmark close"></i>
    </div>
    <form class="form-container border-bottom" id="create-form" enctype="multipart/form-data" method="POST" action="/admin/create/staff">
        <div class="subitem">
            <strong>Nombre</strong>
            <input type="text" name="userFistName" id="userFistName" class="form-input-text" required placeholder="Ingrese su nombre">
        </div>
        <div class="subitem">
            <strong>Apellido</strong>
            <input type="text" name="userLastName" id="userLastName" class="form-input-text" required placeholder="Ingrese su apellido">
        </div>
        
        <div class="subitem">
            <strong>Imagen de Perfil</strong>
            <input type="file" name="imageMember" id="userImage" class="image-info" required placeholder="Ingrese imagen">
        </div>
        
        <div class="subitem">
            <button type="submit" name="add-item" class="submit-btn">Actualizar</button>
        </div>
        
    </form>
</div>